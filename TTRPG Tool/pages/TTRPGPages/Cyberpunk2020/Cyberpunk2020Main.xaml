<Page x:Class="TTRPG_Tool.pages.TTRPGPages.Cyberpunk2020.Cyberpunk2020Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TTRPG_Tool.pages.TTRPGPages.Cyberpunk2020"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280" Background="#1e1e1e"
      Title="Cyberpunk2020Main">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="#262626" BorderBrush="#363636"
        BorderThickness="0, 0, 1, 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Name="HomeButton" Grid.Row="0"
                Style="{StaticResource HomeButton}" Click="ReturnHome"/>
            </Grid>
        </Border>
    </Grid>
</Page>
